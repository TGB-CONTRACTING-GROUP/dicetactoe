<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="8dp">

    <!-- Game Score -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp"
        android:background="@color/gameScoreBackground">

        <!-- Player X Section -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">
            <TextView
                android:id="@+id/player_x_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Player X"
                android:textSize="18sp"
                android:textColor="#FFFFFF"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/player_x_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="24sp"
                android:textColor="#000000"/>
        </LinearLayout>

        <!-- Player O Section -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">
            <TextView
                android:id="@+id/player_o_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Player O"
                android:textSize="18sp"
                android:textColor="#FFFFFF"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/player_o_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="24sp"
                android:textColor="#000000"/>
        </LinearLayout>
    </LinearLayout>

    <!-- Game Status Row -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp"
        android:background="@color/gameScoreBackground">

        <TextView
            android:id="@+id/current_player"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Player X’s turn – 3 rolls left"
            android:gravity="center"
            android:textSize="18sp"
            android:textColor="#FFFFFF"
            android:textStyle="bold"/> <!-- Changed to white -->
    </LinearLayout>

    <!-- Game Board Column -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:background="@color/gameBoardBackground">

        <GridLayout
            android:id="@+id/game_board"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:rowCount="3"
            android:columnCount="3"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="4dp">
        </GridLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/dice_results"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginTop="8dp"
            android:layout_gravity="center_horizontal"/>

        <TextView
            android:id="@+id/dice_instruction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Roll the dice to start the game"
            android:textSize="16sp"
            android:layout_marginTop="4dp"
            android:layout_gravity="center_horizontal"/>

        <LinearLayout
            android:id="@+id/dice_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="4dp">
        </LinearLayout>

        <!-- Current Player, Dice, Placement Info -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp"
            android:layout_marginTop="8dp"
            android:background="#FFFFFF"
            android:gravity="center">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Current Player: X"
                android:gravity="center"
                android:textSize="14sp"
                android:textColor="#000000"/>

            <TextView
                android:id="@+id/dice_combo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Dice: –"
                android:gravity="center"
                android:textSize="14sp"
                android:textColor="#000000"/>

            <TextView
                android:id="@+id/placement_rule"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Placement: –"
                android:gravity="center"
                android:textSize="14sp"
                android:textColor="#000000"/>
        </LinearLayout>
    </LinearLayout>

    <!-- Controls Column -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp"
        android:background="@color/controlBackground">

        <Button
            android:id="@+id/toggle_hints"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="More"
            android:backgroundTint="@color/controlBackground"
            android:textColor="#FFFFFF"/>

        <Button
            android:id="@+id/new_game"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="New Game"
            android:backgroundTint="@color/controlBackground"
            android:textColor="#FFFFFF"/>

        <Button
            android:id="@+id/roll_btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Roll Dice"
            android:backgroundTint="@color/roll_dice_purple"/>

        <Button
            android:id="@+id/skip_btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Skip Rolls"
            android:backgroundTint="@color/controlBackground"
            android:textColor="#FFFFFF"/>

        <Button
            android:id="@+id/next_btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Next"
            android:backgroundTint="@color/controlBackground"
            android:textColor="#FFFFFF"/>
    </LinearLayout>
 </LinearLayout>