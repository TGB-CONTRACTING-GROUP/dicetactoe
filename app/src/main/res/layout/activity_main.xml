<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="8dp"
    android:background="@color/gameBoardBackground">

    <!-- Game Score -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp"
        android:background="@color/gameScoreBackground">

        <!-- Player X Section -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center">

            <!-- Player X Icon with X Overlay -->
            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_black_user"
                    android:contentDescription="Player X Icon" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="X"
                    android:textSize="14sp"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"
                    android:layout_gravity="center" />
            </FrameLayout>

            <TextView
                android:id="@+id/player_x_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="24sp"
                android:textColor="#000000"/>
        </LinearLayout>

        <!-- Player O Section -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center">

            <TextView
                android:id="@+id/player_o_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="24sp"
                android:textColor="#000000"/>

            <!-- Player O Icon with O Overlay -->
            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_black_user"
                    android:contentDescription="Player O Icon" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="O"
                    android:textSize="14sp"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"
                    android:layout_gravity="center" />
            </FrameLayout>
        </LinearLayout>
    </LinearLayout>

    <!-- Game Status Row -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp"
        android:background="@color/gameScoreBackground">

        <TextView
            android:id="@+id/current_player"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Player X’s turn – 3 rolls left"
            android:gravity="center"
            android:textSize="18sp"
            android:textColor="#FFFFFF"
            android:textStyle="bold"/>
    </LinearLayout>

    <!-- Game Board Column -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:background="@color/gameBoardBackground">

        <androidx.gridlayout.widget.GridLayout
            android:id="@+id/game_board"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="24dp"
            app:rowCount="3"
            app:columnCount="3">
        </androidx.gridlayout.widget.GridLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/dice_results"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginTop="8dp"
            android:layout_gravity="center_horizontal"/>

        <TextView
            android:id="@+id/dice_instruction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Roll the dice to start the game"
            android:textSize="16sp"
            android:layout_marginTop="4dp"
            android:layout_gravity="center_horizontal"/>

        <LinearLayout
            android:id="@+id/dice_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="4dp">
        </LinearLayout>
    </LinearLayout>

    <!-- Current Player, Dice, Placement Info -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="4dp"
        android:layout_marginHorizontal="16dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/rounded_top_corners"
        android:gravity="center">

        <!-- Current Player Column -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Current Player"
                android:textSize="12sp"
                android:textColor="#666666"
                android:textStyle="bold"
                android:gravity="center"/>

            <TextView
                android:id="@+id/current_player_indicator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="X"
                android:textSize="14sp"
                android:textColor="#000000"
                android:textStyle="bold"/>
        </LinearLayout>

        <!-- Vertical Divider -->
        <View
            android:layout_width="1dp"
            android:layout_height="20dp"
            android:background="#CCCCCC"
            android:layout_marginHorizontal="4dp"/>

        <!-- Dice Combination Column -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dice Combination"
                android:textSize="12sp"
                android:textColor="#666666"
                android:textStyle="bold"
                android:gravity="center"/>

            <TextView
                android:id="@+id/dice_combo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" - "
                android:textSize="12sp"
                android:textColor="#000000"/>
        </LinearLayout>

        <!-- Vertical Divider -->
        <View
            android:layout_width="1dp"
            android:layout_height="20dp"
            android:background="#CCCCCC"
            android:layout_marginHorizontal="4dp"/>

        <!-- Placement Rule Column -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Placement"
                android:textSize="12sp"
                android:textColor="#666666"
                android:textStyle="bold"
                android:gravity="center"/>

            <TextView
                android:id="@+id/placement_rule"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" - "
                android:textSize="12sp"
                android:textColor="#000000"
                android:maxLines="2"
                android:gravity="center"/>
        </LinearLayout>
    </LinearLayout>

    <!-- Controls Column -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="0dp"
        android:padding="8dp"
        android:background="@color/controlBackground">

        <!-- More Button -->
        <Button
            android:id="@+id/toggle_hints"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:minHeight="60dp"
            android:text="More"
            android:drawableTop="@drawable/ic_more"
            android:drawablePadding="2dp"
            android:gravity="center"
            android:paddingTop="4dp"
            android:backgroundTint="@color/controlBackground"
            android:textColor="#FFFFFF"
            android:textSize="12sp"
            android:singleLine="true"
            android:ellipsize="none"/>

        <!-- New Game Button -->
        <Button
            android:id="@+id/new_game"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:minHeight="60dp"
            android:text="New\nGame"
            android:drawableTop="@drawable/ic_new_game"
            android:drawablePadding="2dp"
            android:gravity="center"
            android:paddingTop="4dp"
            android:backgroundTint="@color/controlBackground"
            android:textColor="#FFFFFF"
            android:textSize="10sp"
            android:lineSpacingMultiplier="1.0"
            />

        <!-- Roll Dice Button -->
        <Button
            android:id="@+id/roll_btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:minHeight="60dp"
            android:text="Roll\nDice"
            android:drawableTop="@drawable/ic_dice"
            android:drawablePadding="2dp"
            android:gravity="center"
            android:paddingTop="4dp"
            android:backgroundTint="@color/roll_dice_purple"
            android:textColor="#FFFFFF"
            android:textSize="12sp"
            android:lineSpacingMultiplier="1.0"/>

        <!-- Skip Rolls Button -->
        <Button
            android:id="@+id/skip_btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:minHeight="60dp"
            android:text="Skip\nRolls"
            android:drawableTop="@drawable/ic_skip"
            android:drawablePadding="2dp"
            android:gravity="center"
            android:paddingTop="4dp"
            android:backgroundTint="@color/controlBackground"
            android:textColor="#FFFFFF"
            android:textSize="12sp"
            android:lineSpacingMultiplier="1.0"/>

        <!-- Next Button -->
        <Button
            android:id="@+id/next_btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:minHeight="60dp"
            android:text="Next"
            android:drawableTop="@drawable/ic_next"
            android:drawablePadding="2dp"
            android:gravity="center"
            android:paddingTop="4dp"
            android:backgroundTint="@color/controlBackground"
            android:textColor="#FFFFFF"
            android:textSize="12sp"
            android:singleLine="true"
            android:ellipsize="none"/>

    </LinearLayout>
</LinearLayout>









